{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"esModuleInterop": true,
		"target": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
	}
}