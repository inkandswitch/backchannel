{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noEmit": true,
		"target": "es5",
		"module": "commonjs",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
	}
	
}